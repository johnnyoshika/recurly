<form id="payment" {{action "submit" on="submit"}}>
    <div class="form-group">
        <label>First Name</label>
        {{input value=firstName class="form-control" data-recurly="first_name"}}
    </div>
    <div class="form-group">
        <label>Last Name</label>
        {{input value=lastName class="form-control" data-recurly="last_name"}}
    </div>
    <div class="form-group">
        <label>Number</label>
        {{input value=number class="form-control" data-recurly="number"}}
    </div>
    <div class="form-group">
        <label>Month</label>
        {{input value=month class="form-control" data-recurly="month"}}
    </div>
    <div class="form-group">
        <label>Year</label>
        {{input value=year class="form-control" data-recurly="year"}}
    </div>
    <div class="form-group">
        <label>CVV</label>
        {{input value=cvv class="form-control" data-recurly="cvv"}}
    </div>
    <input type="hidden" name="recurly-token" data-recurly="token">
    <button type="submit" class="btn btn-default">Submit</button>
</form>