<form id="payment" {{action "submit" on="submit"}}>
    <div class="form-group">
        <label>First Name</label>
        {{input value=first_name class="form-control"}}
    </div>
    <div class="form-group">
        <label>Last Name</label>
        {{input value=last_name class="form-control"}}
    </div>
    <div class="form-group">
        <label>Address 1</label>
        {{input value=address1 class="form-control"}}
    </div>
    <div class="form-group">
        <label>City</label>
        {{input value=city class="form-control"}}
    </div>
    <div class="form-group">
        <label>Country</label>
        {{input value=country class="form-control"}}
    </div>
    <div class="form-group">
        <label>Province</label>
        {{input value=state class="form-control"}}
    </div>
    <div class="form-group">
        <label>Postal Code</label>
        {{input value=postal_code class="form-control"}}
    </div>
    <div class="form-group">
        <label>Number</label>
        {{input value=number class="form-control"}}
    </div>
    <div class="form-group">
        <label>Month</label>
        {{input value=month class="form-control"}}
    </div>
    <div class="form-group">
        <label>Year</label>
        {{input value=year class="form-control"}}
    </div>
    <div class="form-group">
        <label>CVV</label>
        {{input value=cvv class="form-control"}}
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>